@charset "UTF-8";

.bodycl{
	width:100%;
	height:100%;
	/*overflow:hidden;*/
	background: url("../image/bg1.png") no-repeat center center;
}
/*---------------------灾情反馈-------------------------*/
.app-header{
	width:100%;
	height:.88rem;
	position: fixed;
	top:0;
	left:0;
	padding: 0 .2rem;
	font-size: .34rem;
	line-height:.88rem;
	background:#36353a;
	color: #fff;
	z-index:3;
}
.app-header a{
	color: #fff;
	line-height:.88rem;
}
.back{
	position: absolute;
	left: .2rem;
	top: 0;
}
.title{
	text-align: center;
}
.more{
	position: absolute;
	right: .2rem;
	top: 0;
}
.app-content{
	width: 6.5rem;
	margin: 0.75rem auto;
	padding-bottom: 0.8rem;
	background-color: #fff;
	border-radius: .2rem;
	box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.75);
}
.content-header{
	width: 100%;
	height: .76rem;
	padding: 0 .3rem;
	font-size: .24rem;
	line-height: .76rem;
	color: #fff;
	background: #6f88f3;
	border-radius: .2rem .2rem 0 0;
}
.content-header h2{
	float: left;
}
.content-header a{
	color: #fff;
	float: right;
}
.content-content{
	padding: 0 .2rem;
	height: auto;
}
.content-top{
	padding: .16rem 0;
	font-size: .2rem;
	line-height: .44rem;
	color: #000;
}
.content-top span{
	color: #666;
	font-size: .16rem;
	line-height: .40rem;
}
.allocation{
	float: left;
}
.allocation i{
	color: #6c6;
}
.site{
	display: inline-block;
}
.current-time{
	float: right;
}
.sub-title{
	font-size: .2rem;
	line-height: .6rem;
	/*padding-left: .3rem;*/
	padding: .1rem 0 .1rem .3rem;
}
.img-list{
	width: 5.96rem;
	margin: 0 auto;
	text-align: center;
}
.img-list li{
	position: relative;
	float: left;
	width: .85rem;
	top: 0;
	left: 0;
	margin: 0 .2rem;
}
.img-list li img{
	width: .85rem;
	height: .85rem;
	border-radius: 50%;
}
.img-list .active .mark{
	display: block;
}
.mark{
	display: none;
	position: absolute;
	width: .85rem;
	height: .85rem;
	top: 0;
	left: 0;
	border-radius: 50%;
	background: rgba(0,0,0,.5);
	color: #fff;
	line-height: .85rem;
	text-align: center;
}
.img-list li:first-child{
	margin-left:0;
}
.img-list li:last-child{
	margin-right:0;
}
.img-list span{
	font-size: .16rem;
	line-height: .4rem;
}
input[type="text"],
.control-text{
	display: block;
	padding-left: 1em;
	width:5.4rem;
	margin: 0 auto;
	font-size: .16rem;
	line-height: 1.5;
	border-radius: .1rem;
	border: solid 1px #6f88f3;
}
textarea {
	padding-top:.05rem;
	resize: none;
}
.update-img{
	width:5.4rem;
	margin: 0 auto;
}
.update-img span{
	display: inline-block;
	height: 100%;
	vertical-align: middle;
}
.update-img-btn{
	padding: 0 .2rem;
	font-size: .14rem;
	line-height: .3rem;
	background-color: #e8e6e6;
	border: solid 1px #000;
	border-radius: .2rem;
	vertical-align: middle;
}
.content-footer{
	width:5.4rem;
	margin: 0.8rem auto 0;
	text-align: right;
	padding: 0 2.2rem;
}
.submit-btn{
	padding: 0 .27rem;
	font-size: .18rem;
	line-height: .35rem;
	color: #fff;
	background: #607df7;
	border: none;
	border-radius: .2rem;
}
/*---------------------农气服务-------------------------*/
.nq-app-content{
	margin-top: .88rem;
}
.info-type{
	height: 2.94rem;
	padding: .07rem 0;
	background: rgba(255,255,255,.6);
	box-shadow: 0px 4px 8px 0px
	rgba(87, 115, 233, 0.55);
}
.info-type-list{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
	align-content: space-around;
}
.info-type-list li{
	flex: auto;
	text-align: center;
}
.info-type-list:last-child{
	width: 70%;
	margin: 0 auto;
}
.info-type li i,
.info-type .nq-active i{
	display: block;
	width: 1.04rem;
	height: 1.04rem;
	margin: 0 auto;
	border-radius: 50%;
	background-size: cover;
}

.xb{
	background: url("../image/xb.png") no-repeat center center;
}
.cbzb{
	background: url("../image/cbzb.png") no-repeat center center;
}
.qsqz{
	background: url("../image/qsqz.png") no-repeat center center;
}
.ghjc{
	background: url("../image/ghjc.png") no-repeat center center;
}
.qhyx{
	background: url("../image/qhyx.png") no-repeat center center;
}
.info-type .nq-active .xb{
	background: url("../image/h-xb.png") no-repeat center center;
	background-size: cover;
}

.info-type .nq-active .cbzb{
	background: url("../image/h-cbzb.png") no-repeat center center;
	background-size: cover;
}

.info-type .nq-active .qsqz{
	background: url("../image/h-qsqz.png") no-repeat center center;
	background-size: cover;
}

.info-type .nq-active .ghjc{
	background: url("../image/h-ghjc.png") no-repeat center center;
	background-size: cover;
}

.info-type .nq-active .qhyx{
	background: url("../image/h-qhyx.png") no-repeat center center;
	background-size: cover;
}
.info-list-content{
	position: absolute;
	top:3.82rem;
	left: 0;
	right: 0;
	bottom: 0;
	padding: 0 .2rem;
	overflow: hidden;
}
.info-list-content ol{
	font-size: .26rem;
	line-height: .66rem;
	color: #3c3b3b;
	background: rgba(255,255,255,.4);
}
.info-list-content ol li{
	border-bottom: solid 1px #fff;
}
.info-list-content h2{
	padding: 0 .36rem;
}
.info-list-content .fa{
	float: right;
	line-height: .66rem;
}
.info-list-content .open{
	background:  #6f88f3;
	color: #fff;
}
.u-cont{
	padding: .28rem;
	font-size: .24rem;
	line-height: 1.5;
	background: #fff;
}
.hide{
	display: none;
}
/*---------------------气象科普-------------------------*/
.qx-app-content{
	height: 100%;
}
.qx-list-content{
	padding: 0 .2rem;
	height: 100%;
	overflow:hidden;
}
.qx-list-content ol{
	font-size: .26rem;
	line-height: .66rem;
	color: #3c3b3b;
	background: rgba(255,255,255,.4);
}
.qx-list-content ol li{
	border-bottom: solid 1px #fff;
}
.qx-list-content h2{
	padding: 0 .36rem;
}


/*---------------------灾情反馈-列表-------------------------*/
.zq-list-app-content{
	margin-top: .88rem;
}
.zq-list-img-content{
	padding: .17rem 0;
	background: rgba(255,255,255,.6);
	box-shadow: 0px 4px 8px 0px rgba(87, 115, 233, 0.55);
}
.zq-info-list-content{
	position: absolute;
	top: 2.48rem;
	/*top: 1.6rem;*/
	left: 0;
	right: 0;
	bottom: 0;
	padding: 0 .2rem;
	overflow: hidden;
}
.zq-info-list-content ol{
	font-size: .26rem;
	line-height: .66rem;
	color: #3c3b3b;
	background: rgba(255,255,255,.4);
}
.zq-info-list-content li{
	border-bottom: solid 1px #fff;
	padding: 0 .36rem;
}
.zq-info-list-content li:last-child{
	border-bottom: none;
}
.zq-info-list-content .details{
	float: right;
	color: #4259f3;
}