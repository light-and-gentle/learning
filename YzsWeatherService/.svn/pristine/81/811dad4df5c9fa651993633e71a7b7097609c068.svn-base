//获取一小时逐分钟起止时间
function get60Minute() {
    var endTime = new Date();
    var longTime=endTime.getTime();
    longTime=longTime-1000*60*60;
    var beginTime = new Date(longTime);
    return {beginTime:beginTime,endTime:endTime}
}


