/*撰写*/
.s-top{
	width: 100%;
	/*height: 80px;*/
	background: #f2f2f2;
	padding: 10px 27px;
	/*line-height: 26px;*/
	box-sizing: border-box;
}
.category{
	float: left;
	/*font-size: 16px;*/
}
.radio-box{
	display: inline-block;
	margin-right: 10px;
}
.radio-box input{
	display: none;
}
.radio-box label{
	position: relative;
	display: inline-block;
	width: 14px;
	height: 14px;
	top: 0;
	left: 0;
	vertical-align: middle;
	border: solid 1px  #535554;
	border-radius:50%;
	cursor: pointer;
}
.radio-box input:checked + label{
	border: solid 1px  #1fc0f0;
}
.radio-box input:checked + label:after{
	content: '';
	width: 10px;
	height: 10px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top:-5px;
	margin-left:-5px;
	background: #00b7ee;
	border-radius: 50%;
}

.check-box em{
	margin:0 0 0 5px;
}
.add-btn{
	float: right;
	width: 45px;
	height: 45px;
	margin-top: 10px;
	background: url("../img/add.png") no-repeat center center;
	cursor: pointer;
}
.s-list{
	width: 100%;
	padding: 20px 27px 0;
	box-sizing: border-box;
}
.s-table{
	width: 100%;
	max-width: 100%;
}
.s-table thead{
	height: 50px;
	font-size: 18px;
	line-height: 50px;
	color: #2c2c2c;
	background: #a9d2ca;
}
.s-table tbody tr td,
.s-table thead tr td{
	text-align: center;
}
.s-table tbody tr{
	height: 50px;
	font-size: 16px;
}
.s-table tbody tr:nth-child(odd){
	background: #f7fbfa;
}
.s-table tbody tr:nth-child(even){
	background: #e1efed;
}
.s-table span{
	display: inline-block;
	width: 45px;
	height: 45px;
	cursor: pointer;
}
.send-btn{
	background: url("../img/send.png") no-repeat center center;
}
.del-btn{
	background: url("../img/del.png") no-repeat center center;
}