/*农情情报*/

.info-classify{
	width: 100%;
	height: 140px;
	background-color: #f2f2f2;
	border-bottom: solid 1px #ccc;
}
.classify-list{
	width: 92%;
	padding: 11px 0;
	margin: 0 auto;
}
.classify-list-content{
	margin-right: -20px;
}
.classify-list-content li{
	float: left;
	width: 15%;
	height: 118px;
	margin-right: 20px;
	/*background-size: contain;*/
	background-size: 100% 118px;
	cursor: pointer;
}
.classify-list ul .classify-active,
.classify-list ul li:hover{
	background-size: 100% 118px;
	cursor: pointer;
}
.classify-list ul li:last-child{
	margin-right: 0;
}
.xb{
	background: url("../img/xb.png") no-repeat;
}
.yb{
	background: url("../img/yb.png") no-repeat;
}
.jb{
	background: url("../img/jb.png") no-repeat;
}
.nb{
	background: url("../img/nb.png") no-repeat;
}
.cbzt{
	background: url("../img/cbzt.png") no-repeat;
}
.qbzt{
	background: url("../img/qbzt.png") no-repeat;
}
.xb:hover,
.classify-active.xb{
	background: url("../img/h-xb.png") no-repeat;
}
.yb:hover,
.classify-active.yb{
	background: url("../img/h-yb.png") no-repeat;
}
.jb:hover,
.classify-active.jb{
	background: url("../img/h-jb.png") no-repeat;
}
.nb:hover,
.classify-active.nb{
	background: url("../img/h-nb.png") no-repeat;
}
.cbzt:hover,
.classify-active.cbzt{
	background: url("../img/h-cbtz.png") no-repeat;
}
.qbzt:hover,
.classify-active.qbzt{
	background: url("../img/h-qbzt.png") no-repeat;
}
.info-list{
	margin: 18px 10px 0;
	background: #f7f7f7;
	padding-bottom: 20px;
}
.info-title-content{
	height: 50px;
	border: solid 1px #ccc;
	background: #f7f7f7;
}
.info-title{
	line-height: 50px;
	color: #333;

}
.search-content{
	width: 300px;
	height: 34px;
	margin-top: 6px;
	margin-right: 27px;
	border: solid 1px rgba(9,140,240,0.54);
	box-shadow: 0px 1px 0px 0px
	rgba(255, 255, 255, 0.65),
	inset 0px 1px 2px 0px
	rgba(0, 0, 0, 0.15);
	border-radius: 20px;
	background: #eee;
}
.search-t{
	float: left;
	width: 248px;
	font-size: 14px;
	padding-left: 17px;
	line-height: 34px;
	background: #eee;
	border-radius: 20px;
}
.search-btn{
	float: right;
	width: 32px;
	height: 32px;
	border-radius: 50%;
	box-shadow: 0px 1px 1px 0px
	rgba(0, 0, 0, 0.15),
	inset 0px 1px 0px 1px
	#ffffff;
	background: url("../img/sousuo.png")
	no-repeat center center #f4f4f4;
	cursor: pointer;
}
.info-doc-list{
	line-height: 60px;
}
.info-doc-list li{
	position: relative;
	padding-left: 25px;
	border-bottom: 1px dashed #d8d8d8;
	font-size: 14px;
	line-height: 40px;
	background: url("../img/nqfw.png")no-repeat center left ;
	cursor: pointer;
}
.info-doc-list li:hover{
	color: #1f72ba;
	background: url("../img/nqfw.png")no-repeat center left  #fff;
}
.time{
	position: absolute;
	right: 40px;
	top: 5px;
	font-size: 14px;
	line-height: 30px;
}

/*分页*/
.page-content{
	padding-top: 30px;
}
.simple-pagination ul{
	float: right;
	margin-right: 30px;
}